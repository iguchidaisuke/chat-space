.side_var
  .side_var_header
    .side_header_box
      %p.side_header_box__user-name 
        =current_user.name
      %ul.side_header_box__menu
        %li.side_header_box__new-group
          =link_to new_group_path do
            %i.fa.fa-edit
        %li.side_header_box__edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')

  .side_var_groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
      
